= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.error_notification
  = f.input :role, :as => :hidden, :input_html => { :value => role }
  = f.input :name, :autofocus => true, :label => false, :placeholder => t('placeholder.full_name'), :input_html => {:class => 'span12'}
  = f.input :email, :required => true, :label => false, :placeholder => t('placeholder.email'), :input_html => {:class => 'span12'}
  = f.input :password, :required => true, :label => false, :placeholder => t('placeholder.password'), :input_html => {:class => 'span12'}
  = f.input :password_confirmation, :required => true, :label => false, :placeholder => t('placeholder.confirm_password'), :input_html => {:class => 'span12'}
  = f.button :submit, t('placeholder.sign_up'), :class => 'btn-success span12'